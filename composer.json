{
    "name": "isecurefi/wscli-php",
    "description": "ISECure WS-Channel PHP CLI",
    "type": "library",
    "version": "0.1.0",
    "keywords": [
        "WS-Channel",
        "wscli-php",
        "wscli",
        "isecure"
    ],
    "homepage": "https://www.isecure.fi/",
    "time": "2017-07-01",
    "license": "MIT",
    "authors": [{
        "name": "Dan Forsberg",
        "email": "dan.forsberg@isecure.fi",
        "homepage": "https://www.isecure.fi",
        "role": "Lead"
    }],
    "support": {
        "email": "dan.forsberg@isecure.fi"
    },
    "repositories": [{
        "type": "git",
        "url": "https://github.com/isecurefi/wscli-php/wscli-php-sdk"
    }, {
        "type": "git",
        "url": "https://github.com/isecurefi/wscli-php/wscli-php-sdk/SwaggerClient-php"
    }],
    "require": {
        "php": ">=5.6.0",
        "monolog/monolog": "^1.23",
        "docopt/docopt": "^1.0",
        "isecurefi/wscli-php-sdk": "*",
        "padraic/phar-updater": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "squizlabs/php_codesniffer": "^2.8",
        "friendsofphp/php-cs-fixer": "^2.3",
        "phpmd/phpmd": "^2.6",
        "phploc/phploc": "^4.0"
    },
    "bin": [
        "wscli"
    ],
    "autoload": {
        "psr-4": {
            "IsecureFi\\WsCli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IsecureFi\\WsCli\\": [
                "tests/",
                "tests/Fake"
            ]
        }
    },
    "scripts": {
        "test": [
            "phpmd src text ./phpmd.xml",
            "@cs",
            "phpunit"
        ],
        "coverage": [
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "php-cs-fixer fix -v src",
            "phpcs --standard=./phpcs.xml src"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v src",
            "phpcbf src"
        ],
        "build": [
            "rm -rf ./build; mkdir -p ./build/logs ./build/pdepend",
            "pdepend --jdepend-xml=./build/logs/jdepend.xml --jdepend-chart=./build/pdepend/dependencies.svg --overview-pyramid=./build/pdepend/overview-pyramid.svg src",
            "phploc --log-csv ./build/logs/phploc.csv src",
            "@cs",
            "@test"
        ]
    }
}
